<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/translation_icon"
                android:layout_marginEnd="4dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translator"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:weightSum="3"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <Spinner
                android:layout_gravity="center"
                android:id="@+id/spinner_source_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_status"
                android:layout_weight="1"/>
            <Spinner
                android:layout_gravity="center"
                android:id="@+id/spinner_target_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="8dp"
            app:boxBackgroundMode="none"
            app:hintEnabled="false">
            <EditText
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textColorHint="@color/color1"
                android:gravity="top"
                android:id="@+id/idEditSource"
                android:background="@drawable/corners_shape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Text"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:textSize="19sp"
            android:id="@+id/idBtnTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Translate"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/idTranslatedTV"
            android:background="@drawable/corners_shape"
            android:padding="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:text="Translated text here"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="3dp"
            android:letterSpacing="0.03"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/textOutput1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Or"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/idIVMic"
            android:padding="4dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_mic_black_off"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="16sp"
            android:textColor="@color/purple_200"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Say something"/>
    </LinearLayout>
</ScrollView>