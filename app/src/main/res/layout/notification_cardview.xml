<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="24dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_notification"
        android:background="#dad7d3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:elevation="@dimen/cardview_default_elevation"
        card_view:cardCornerRadius="34dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            card_view:cardCornerRadius="30dp">
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+INVITE"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:id="@+id/name_notificationn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="AMAN PATEL"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="20dp"
                        android:textColor="#6886c5"
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="Pune"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=","/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="20dp"
                        android:textColor="#6886c5"
                        android:gravity="left"
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="India"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="20dp"
                    android:textColor="#6886c5"
                    android:gravity="left"
                    android:id="@+id/occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="Student"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#6886c5"
                    android:id="@+id/accept_btn11"
                    android:background="@drawable/blue_rounded_border"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Accept"
                    android:layout_below="@+id/user_bio"
                    android:textAllCaps="false"/>
                <View
                    android:layout_width="15dp"
                    android:layout_height="10dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0e0d0d"
                    android:id="@+id/decline_btn11"
                    android:background="@drawable/black_rounded_border"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Decline"
                    android:layout_below="@+id/accept_btn1"
                    android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="18dp"
                    android:textColor="#131313"
                    android:id="@+id/user_bion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Hi community! I am open to new   connections"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_notificationn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/account_customize_man_svgrepo_com__1_"
        android:adjustViewBounds="false"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp"
        android:translationZ="5dp"
        android:elevation="20dp"
        card_view:layout_constraintBottom_toBottomOf="parent"


        card_view:layout_constraintHorizontal_bias="0.098"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"/>
</RelativeLayout>